{
    "extends": "@react-native/typescript-config/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@root/*": [
                "*"
            ]
        },
        "types": [
            "react-native",
            "node"
        ],
        "skipLibCheck": true,
        "allowImportingTsExtensions": false,
        "resolvePackageJsonExports": true
    },
    "include": [
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "**/node_modules",
        "**/Pods",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js",
        "jest.setup.js",
        ".prettierrc.js"
    ]
}
